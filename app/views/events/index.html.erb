<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-12">
      <% if params[:q].present? && params[:q][:title_cont].present? %>
        <h1>"<%= params[:q][:title_cont] %>" の検索結果</h1>
        <p><%= @events.count %>件のイベントが見つかりました</p>
      <% else %>
        <h1><%= t('events.index.title') %></h1>
      <% end %>
    </div>
  </div>

  <% if @events.present? %>
    <!-- 各種イベントカードを追加 -->
    <div class="row">
      <%= render @events %>
    </div>

    <!-- ページネーションリンクを追加 -->
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @events %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <i class="bi bi-info-circle me-2"></i>まだイベントがありません。新しいイベントを作成してみましょう！
    </div>
  <% end %>
</div>
