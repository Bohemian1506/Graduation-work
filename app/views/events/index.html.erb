<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-6">
      <h1><%= t('events.index.title') %></h1>
    </div>
    <div class="col-md-6 text-end">
      <% if user_signed_in? %>
        <%= link_to new_event_path, class: "btn btn-primary me-2" do %>
          <i class="bi bi-plus-circle me-1"></i>新しいイベントを作成
        <% end %>
        <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-outline-danger d-inline-block" do %>
          <i class="bi bi-box-arrow-right me-1"></i>ログアウト
        <% end %>
      <% else %>
        <%= link_to new_user_session_path, class: "btn btn-outline-primary" do %>
          <i class="bi bi-box-arrow-in-right me-1"></i>ログイン
        <% end %>
      <% end %>
    </div>
  </div>

  <% if @events.present? %>
    <div class="row">
      <%= render @events %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <i class="bi bi-info-circle me-2"></i>まだイベントがありません。新しいイベントを作成してみましょう！
    </div>
  <% end %>
</div>
