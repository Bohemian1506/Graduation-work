<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <!-- イベント情報カード -->
      <div class="card mb-4 shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
          <div>
            <h1 class="fs-3 mb-0 fw-bold"><%= @event.title %></h1>
          </div>
          <div>
            <%= render(Events::Info::StatusBadgeComponent.new(event: @event)) %>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <!-- 左側：基本情報 -->
            <div class="col-md-7">
              <%= render(Events::Info::BasicInfoComponent.new(event: @event)) %>
              
              <!-- コピーボタン -->
              <%= render(Events::Info::CopyButtonComponent.new(event: @event)) %>
            </div>
            
            <!-- 右側：メモと操作ボタン部分 -->
            <div class="col-md-5 d-flex flex-column">
              <!-- 備考・メモカード -->
              <%= render(Events::Info::NotesComponent.new(event: @event)) %>
              
              <!-- 操作ボタン -->
              <%= render(Events::Info::ActionButtonsComponent.new(event: @event, current_user: current_user)) %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- TODOリストカード -->
      <%= render(Events::Todo::ListComponent.new(event: @event, current_user: current_user)) %>
      
      <!-- 戻るボタン -->
      <div class="mb-4">
        <%= link_to events_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left me-1"></i>イベント一覧に戻る
        <% end %>
      </div>
    </div>
  </div>
</div>